<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <ul>
    <li><%= f.text_field :login, autofocus: true, placeholder: "username" %></li>


    <li><%= f.password_field :password, autocomplete: "off", placeholder: "password" %></li>

  <% if devise_mapping.rememberable? -%>

    <li>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </li>
  <% end -%>

    <li><%= f.submit "Log in" %></li>
    <li><%= render "users/shared/links" %></li>
  </ul>
<% end %>
